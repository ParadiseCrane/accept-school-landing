---
// File: src/pages/terms-of-service.astro
import { getEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";

// 1. Fetch the specific entry for the terms of service
const entry = await getEntry("legal", "terms-of-service");
if (!entry) {
  throw new Error(
    "ERROR: The content for the Privacy Policy page was not found. \n" +
      'Please make sure a file exists at "src/content/legal/privacy-policy.md".'
  );
}
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - Accept School`}>
  <div class="legal-page">
    <h1>{entry.data.title}</h1>
    <p><em>Дата последнего обновления: {entry.data.last_updated}</em></p>

    <!-- 2. Render the content from the Markdown file -->
    <Content />
  </div>
</Layout>

<style>
  /* These styles are scoped to this page */
  .legal-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem;
    line-height: 1.7;
  }
  .legal-page h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
  }
  .legal-page h2 {
    font-size: 1.8rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
  }
  .legal-page p,
  .legal-page li {
    font-size: 1rem;
    opacity: 0.9;
  }
  .legal-page strong {
    font-weight: 600;
  }
  .legal-page a {
    color: var(--primary-color);
    text-decoration: none;
  }
  .legal-page a:hover {
    text-decoration: underline;
  }
</style>
