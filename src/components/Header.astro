---
// File: src/components/Header.astro
import ThemeToggler from "./ThemeToggle.astro";
---

<header>
  <nav>
    <a href="/" class="logo"> Accept School </a>
    <ThemeToggler />
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    width: 100%;
    background-color: var(--header-bg);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color);
    z-index: 10;
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }
  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
</style>
