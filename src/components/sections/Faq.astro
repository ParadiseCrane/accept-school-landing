---
const { entry } = Astro.props;
const { title, questions } = entry.data;
---

<section id="faq" class="faq-container">
  <h2>{title}</h2>
  <div class="faq-list">
    {
      questions.map((item: { q: string; a: string }) => (
        <details class="faq-item">
          <summary>{item.q}</summary>
          <p>{item.a}</p>
        </details>
      ))
    }
  </div>
</section>
<style>
  .faq-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 5rem 2rem;
  }
  h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 3rem;
  }
  .faq-item {
    border-bottom: 1px solid var(--border-color);
    padding: 1.5rem 0;
  }
  summary {
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  summary::-webkit-details-marker {
    display: none;
  }
  summary::after {
    content: "+";
    font-size: 1.5rem;
    font-weight: 400;
    transition: transform 0.2s ease;
  }
  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }
  .faq-item p {
    margin: 1rem 0 0 0;
    opacity: 0.8;
    line-height: 1.7;
  }
</style>
