---
const { entry } = Astro.props;
const { title, cards } = entry.data;
---

<section class="whynow-container">
  <h2>{title}</h2>
  <div class="cards-grid">
    {
      cards.map((card: { title: string; text: string }) => (
        <div class="info-card">
          <h3>{card.title}</h3>
          <p>{card.text}</p>
        </div>
      ))
    }
  </div>
  <div class="interactive-feature">
    <p>Здесь будет интерактивный калькулятор зарплат</p>
  </div>
</section>

<style>
  .whynow-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 2rem;
    text-align: center;
  }

  .whynow-container h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 3rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    text-align: left;
    margin-bottom: 3rem;
  }

  .info-card {
    background-color: var(--card-bg-color);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }

  .info-card h3 {
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }

  .interactive-feature {
    background-color: var(--card-bg-color);
    border: 1px dashed var(--primary-color);
    padding: 2rem;
    border-radius: 16px;
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }

  /* On smaller screens, stack the cards */
  @media (max-width: 768px) {
    .cards-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
