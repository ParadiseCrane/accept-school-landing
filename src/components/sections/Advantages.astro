---
const { entry } = Astro.props;
const { title, advantages } = entry.data;
---

<section class="advantages-container">
  <div class="content-wrapper">
    <h2>{title}</h2>
    <div class="advantages-grid">
      {
        advantages.map(
          (advantage: { icon: string; title: string; text: string }) => (
            <div class="advantage-item">
              <span class="icon">{advantage.icon}</span>
              <div class="text-content">
                <h3>{advantage.title}</h3>
                <p>{advantage.text}</p>
              </div>
            </div>
          )
        )
      }
    </div>
  </div>
</section>

<style>
  .advantages-container {
    background-color: var(--card-bg-color);
    padding: 5rem 2rem;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }
  .content-wrapper {
    max-width: 1200px;

    margin: 0 auto;
  }
  h2 {
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 3rem;
  }

  .advantages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
  }
  .advantage-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }
  .icon {
    font-size: 2rem;
    line-height: 1;
  }
  .text-content h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .text-content p {
    font-size: 0.95rem;
    opacity: 0.8;
    line-height: 1.6;
  }
</style>
