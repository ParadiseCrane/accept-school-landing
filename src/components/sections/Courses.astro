---
const { entry } = Astro.props;
const { title, description, courses, language_bonus } = entry.data;
---

<section class="courses-container">
  <div class="content-wrapper">
    <h2>{title}</h2>
    <p class="description">{description}</p>

    <div class="courses-grid">
      {
        courses.map(
          (course: {
            title: string;
            text: string;
            for_whom: string;
            what_you_get: string;
          }) => (
            <div
              class="course-card"
              class:list={{ "is-hot": course.title.includes("üî•") }}
            >
              <h3>{course.title}</h3>
              <div class="details">
                <strong>–î–ª—è –∫–æ–≥–æ:</strong> {course.for_whom}
              </div>
              <div class="details">
                <strong>–ß—Ç–æ –±—É–¥–µ—Ç:</strong> {course.what_you_get}
              </div>
            </div>
          )
        )
      }
    </div>

    <div class="language-bonus-grid">
      {
        language_bonus.map((bonus: { title: string; text: string }) => (
          <div class="bonus-card">
            <h4>{bonus.title}</h4>
            <p>{bonus.text}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .courses-container {
    padding: 5rem 2rem;
  }
  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }
  .description {
    font-size: 1.125rem;
    max-width: 800px;
    margin: 0 auto 3rem auto;
    opacity: 0.8;
  }

  .courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
    text-align: left;
  }
  .course-card {
    background-color: var(--card-bg-color);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }
  .course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    html[data-theme="dark"] & {
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
  }
  .course-card.is-hot {
    border-color: var(--primary-color);
  }
  .course-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .details {
    font-size: 0.95rem;
    opacity: 0.9;
  }
  .details:not(:last-child) {
    margin-bottom: 1rem;
  }
  .details strong {
    color: var(--primary-color);
  }

  .language-bonus-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    text-align: left;
  }
  .bonus-card {
    background-color: var(--card-bg-color);
    padding: 1.5rem;
    border-radius: 12px;
  }
  .bonus-card h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  .bonus-card p {
    font-size: 0.9rem;
    opacity: 0.8;
  }
  @media (max-width: 768px) {
    .language-bonus-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
