---
// import { marked } from 'marked';
const { entry } = Astro.props;
const { title, tagline, list_blocks, cta_text, cta_url } = entry.data;
---

<section class="track-container">
  <div class="track-grid">
    <div class="text-content">
      <h2>{title}</h2>
      <p class="tagline">{tagline}</p>
      {
        list_blocks.map((block: { title: string; items: string[] }) => (
          <div class="list-block">
            <h4>{block.title}</h4>
            <ul>
              {/* {block.items.map(item => <li set:html={marked.parse(item)} />)} */}
              {block.items.map((item) => (
                <li set:html={item} />
              ))}
            </ul>
          </div>
        ))
      }
      <a href={cta_url} class="cta-button">{cta_text}</a>
    </div>
    <div class="visual-content">
      <div class="visual-placeholder"><p>Visual: Happy Students</p></div>
    </div>
  </div>
</section>
<style>
  .track-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 2rem;
  }

  .track-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
  }

  .text-content h2 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    line-height: 1.2;
  }

  .tagline {
    font-size: 1.25rem;
    opacity: 0.8;
    margin-top: 1rem;
    margin-bottom: 2.5rem;
  }

  .list-block {
    margin-bottom: 2rem;
  }

  .list-block h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .list-block ul {
    list-style: none;
    padding-left: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .list-block li {
    padding-left: 1.5rem;
    position: relative;
  }

  .list-block li::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
  }

  .cta-button {
    display: inline-block;
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    background-color: transparent;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: bold;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  .cta-button:hover {
    background-color: var(--primary-color);
    color: white;
  }

  .visual-placeholder {
    height: 100%;
    min-height: 450px;
    background-color: var(--card-bg-color);
    border: 1px dashed var(--border-color);
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--text-color);
    opacity: 0.5;
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }

  @media (max-width: 900px) {
    .track-grid {
      grid-template-columns: 1fr;
    }
    .visual-content {
      margin-top: 3rem;
    }
  }
</style>
