---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css"; // <-- ADD THIS LINE

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Accept School - Твой IT-старт в одно касание!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-white dark:bg-background text-gray-800 dark:text-text font-sans"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      /* Add any global styles here */
      :root {
        color-scheme: light;
      }
      :root.dark {
        color-scheme: dark;
      }
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
